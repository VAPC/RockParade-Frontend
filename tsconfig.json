{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "pretty": true,
    "module": "es6",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "src/**/*.ts",
    "includes/**/*.ts"
  ]
}